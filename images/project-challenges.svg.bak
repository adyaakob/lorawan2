<?xml version="1.0" encoding="UTF-8"?>
<svg width="800" height="400" xmlns="http://www.w3.org/2000/svg">
    <rect width="100%" height="100%" fill="#f8f9fa"/>
    
    <!-- Environmental Circle -->
    <circle cx="200" cy="200" r="120" fill="#3498db" opacity="0.2"/>
    <text x="200" y="180" font-family="Arial" font-size="16" text-anchor="middle" fill="#2c3e50">Environmental</text>
    <text x="200" y="200" font-family="Arial" font-size="12" text-anchor="middle" fill="#2c3e50">Dense Canopy</text>
    <text x="200" y="220" font-family="Arial" font-size="12" text-anchor="middle" fill="#2c3e50">Remote Location</text>

    <!-- Technical Circle -->
    <circle cx="400" cy="200" r="120" fill="#e74c3c" opacity="0.2"/>
    <text x="400" y="180" font-family="Arial" font-size="16" text-anchor="middle" fill="#2c3e50">Technical</text>
    <text x="400" y="200" font-family="Arial" font-size="12" text-anchor="middle" fill="#2c3e50">Power Limitations</text>
    <text x="400" y="220" font-family="Arial" font-size="12" text-anchor="middle" fill="#2c3e50">Coverage Needs</text>

    <!-- Operational Circle -->
    <circle cx="600" cy="200" r="120" fill="#2ecc71" opacity="0.2"/>
    <text x="600" y="180" font-family="Arial" font-size="16" text-anchor="middle" fill="#2c3e50">Operational</text>
    <text x="600" y="200" font-family="Arial" font-size="12" text-anchor="middle" fill="#2c3e50">3,000 Workers</text>
    <text x="600" y="220" font-family="Arial" font-size="12" text-anchor="middle" fill="#2c3e50">300 Hectares</text>
</svg>
